import java.util.Scanner;

public class BloodDrive {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int T = scanner.nextInt(); // Number of test cases
        
        for (int i = 0; i < T; i++) {
            int N = scanner.nextInt(); // Number of required donations
            int X = scanner.nextInt(); // Number of collected donations
            
            int remainingDonations = N - X; // Calculate the remaining number of donations
            
            System.out.println(remainingDonations);
        }
    }
}
