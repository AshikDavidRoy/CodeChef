import java.util.Scanner;

public class CreditDistribution {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int T = scanner.nextInt();  // Number of test cases
        
        for (int i = 0; i < T; i++) {
            int X = scanner.nextInt();  // Number of RTP courses
            int Y = scanner.nextInt();  // Number of Audit courses
            int Z = scanner.nextInt();  // Number of Non-RTP courses
            
            int credits = (4 * X) + (2 * Y);  // Calculate the total credits
            
            System.out.println(credits);
        }
        
        scanner.close();
    }
}
