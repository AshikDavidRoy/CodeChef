import java.util.Scanner;

public class BobExamScore {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int T = sc.nextInt(); // number of test cases

        for (int i = 0; i < T; i++) {
            int N = sc.nextInt(); // total number of questions
            int K = sc.nextInt(); // Alice's score

            int BobScore = N - K; // Bob's score is the difference between total questions and Alice's score
            System.out.println(BobScore);
        }

        sc.close();
    }
}
