def sum_of_first_and_last_digits(number):
    # Convert the number to string to extract first and last digits
    number_str = str(number)
    first_digit = int(number_str[0])
    last_digit = int(number_str[-1])
    
    # Calculate and return the sum of first and last digits
    return first_digit + last_digit

# Read the number of test cases
T = int(input())

for _ in range(T):
    # Read the number for each test case
    N = int(input())
    
    # Calculate and print the sum of first and last digits
    print(sum_of_first_and_last_digits(N))
